@model LoginModel

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<title>Admin Panel</title>

<link href=@Url.Content("~/css/bootstrap.min.css") rel="stylesheet" type="text/css" />
      <link href=@Url.Content("~/css/style.css") rel="stylesheet" />
<div class="body_login">
    <div>
        <div class="d-flex align-items-center">
            <div class="loginBlock">
                <h5 class="poppins">Resume Management System</h5>
                <div class="logoBlock">
                    <img src="@Url.Content("~/img/logo.png")" alt="" class="img-fluid" />
                </div>
               @* <p>
                    Everything is always integrated with <br />
                    your collage's online handouts
                </p>*@
            </div>
            <div class="formBlock">
                <form id="form" action="" method="post">
                    <h4 class="poppins mb-4">Get Started</h4>
                    <div class="form-group mb-3">
                        <i data-feather="user"></i>
                        <input type="text" name="email" class="form-control"  pattern="[^\s]+[^\s]+\.[^\s]+" title="Invalid email address" placeholder="Username/Email" required message="Please fill Username" />
                        <p id="emailError"></p>
                    </div>
                    <div class="form-group mb-3">
                        <i data-feather="lock"></i>
                        <input type="password" name="password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Invalid Password" placeholder="Password" required message="Please fill Password" />
                        <p id="passwordError"></p>
                    </div>
                    @if (TempData["Login"] != null)
                    {
                        <p style="color:red"> Invalid Username or Password! </p>
                    }
                    <div class="form-group mb-3">
                        <button type="submit" name="login" class="btn btn-green w-100 mt-3" formaction=@Url.Action("Login")>Sign In</button>
                    </div>
                    <div>
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src=@Url.Content("~/js/jquery-3.5.1.js")></script>
    <script src=@Url.Content("~/js/jquery.dataTables.min.js")></script>
    <script src=@Url.Content("~/js/dataTables.bootstrap5.min.js")></script>
            <script src=@Url.Content("~/js/feather.min.js")></script>
            <script src=@Url.Content("~/js/bootstrap.bundle.min.js")></script>
            <script src=@Url.Content("~/js/custom.js")></script>

</div>