@model ResetPasswordViewModel

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<title>Forgot Password</title>

<link href=@Url.Content("~/css/bootstrap.min.css") rel="stylesheet" type="text/css" />
      <link href=@Url.Content("~/css/style.css") rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#password, #confirmPassword').on('keyup', function () {
            alert("checkmatch");
            if ($('#password').val() == $('#confirmPassword').val()) {
                alert("passwrodmatch");
                $('#message').html('Matching').css('color', 'green');
            } else {
                alert("passwrodnotmatch");
                $('#message').html('Not Matching').css('color', 'red');
            }
        });
    });
</script>
<div class="body_login">
    <div>
        <div class="d-flex align-items-center">
            <div class="loginBlock">
                <h5 class="poppins">Resume Management System</h5>
                <div class="logoBlock">
                    <img src="@Url.Content("~/img/logo.png")" alt="" class="img-fluid" />
                </div>
                @* <p>
                Everything is always integrated with <br />
                your collage's online handouts
                </p>*@
            </div>
            <div class="formBlock">
                <form method="post" asp-action="ResetPassword" asp-controller="Home">
                    <h4 class="poppins mb-4">Reset Password</h4>
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <div class="form-group mb-3">
                        <i data-feather="lock"></i>
                        <input type="password" id="password" name="Password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Invalid Password" placeholder="Password" required/>
                        
                    </div>
                    <div class="form-group mb-3">
                        <i data-feather="lock"></i>
                        <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Invalid Password" placeholder="Confirm Password" required />
                        
                        <span id='message'></span>
                    </div>
                    <div class="form-group mb-3">
                        <button type="submit" name="login" class="btn btn-primary">Reset</button>
                   </div>
                </form>
                <script src=@Url.Content("~/js/jquery-3.5.1.js")></script>
                <script src=@Url.Content("~/js/jquery.dataTables.min.js")></script>
                <script src=@Url.Content("~/js/dataTables.bootstrap5.min.js")></script>
                <script src=@Url.Content("~/js/feather.min.js")></script>
                <script src=@Url.Content("~/js/bootstrap.bundle.min.js")></script>
                <script src=@Url.Content("~/js/custom.js")></script>
            </div>
        </div>
    </div>
    </div>
